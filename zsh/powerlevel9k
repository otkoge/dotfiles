POWERLEVEL9K_CONTEXT_TEMPLATE='%n'
# Colors of prompt
POWERLEVEL9K_CONTEXT_DEFAULT_FOREGROUND='white'
POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX='%F{022}╭─%F{022}'
POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="%F{022}\u2570%F{red}\uF460%F{073}\uF460%F{109}\uF460%f "

# DIR: https://github.com/Powerlevel9k/powerlevel9k/blob/next/segments/dir/README.md
# POWERLEVEL9K_SHORTEN_DIR_LENGTH=3
