# https://github.com/Powerlevel9k/powerlevel9k/tree/next/segments
# https://github.com/Powerlevel9k/powerlevel9k/blob/master/functions/colors.zsh
POWERLEVEL9K_MODE=nerdfont-complete

# Make a new line after the status bar before the prompt
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_RPROMPT_ON_NEWLINE=true
# Always make new line before next prompt
POWERLEVEL9K_PROMPT_ADD_NEWLINE=true
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(vi_mode custom_os_icon  ssh root_indicator dir virtualenv vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status time dir_writable)

# Name
POWERLEVEL9K_CUSTOM_OS_ICON='echo   $(whoami) '
POWERLEVEL9K_CUSTOM_OS_ICON_BACKGROUND=green
POWERLEVEL9K_CUSTOM_OS_ICON_FOREGROUND=black


# Git repo specific
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND='yellow'
